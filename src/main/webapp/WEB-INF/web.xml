<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Seat Booking Application</display-name>

    <servlet>
        <servlet-name>ChooseSeatServlet</servlet-name>
        <servlet-class>com.example.servlet.ChooseSeatServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChooseSeatServlet</servlet-name>
        <url-pattern>/chooseSeat</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ConfirmSeatServlet</servlet-name>
        <servlet-class>com.example.servlet.ConfirmSeatServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConfirmSeatServlet</servlet-name>
        <url-pattern>/confirmSeat</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MakePaymentServlet</servlet-name>
        <servlet-class>com.example.servlet.MakePaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MakePaymentServlet</servlet-name>
        <url-pattern>/makePayment</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>assignseat.jsp</welcome-file>
    </welcome-file-list>
</web-app>